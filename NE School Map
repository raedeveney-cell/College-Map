<div id="map"></div>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet.markercluster@1.5.3/dist/leaflet.markercluster.js"></script>
<script>
// Map setup
var map=L.map('map').setView([42.5,-72],7);
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png',{maxZoom:19,attribution:'&copy; OpenStreetMap contributors'}).addTo(map);

// Region colors
var regionColors={"Boston Area":"red","NY/Upstate":"blue","MA/CT/Western NE":"green"};

// School data
var schools={
"Tufts University":[42.4075,-71.119,"Boston Area","https://www.tufts.edu","https://as.tufts.edu/sociology/","https://students.tufts.edu/","https://admissions.tufts.edu/"],
"Northeastern University":[42.3398,-71.0892,"Boston Area","https://www.northeastern.edu","https://damore-mckim.northeastern.edu/programs/marketing-undergraduate-concentration/","https://studentlife.northeastern.edu/","https://undergraduate.northeastern.edu/admissions/"],
"Boston University":[42.3505,-71.1054,"Boston Area","https://www.bu.edu","https://www.bu.edu/academics/questrom/courses/marketing/","https://www.bu.edu/admissions/why-bu/student-life/","https://www.bu.edu/admissions/"],
"Emerson College":[42.352,-71.0656,"Boston Area","https://www.emerson.edu","https://emerson.edu/programs/marketing-communication-bs","https://emerson.edu/emerson-life/campus","https://emerson.edu/admission"],
"Brandeis University":[42.365,-71.2607,"Boston Area","https://www.brandeis.edu","https://www.brandeis.edu/business/","https://www.brandeis.edu/student-life/","https://www.brandeis.edu/admissions/"],
"Babson College":[42.2987,-71.2654,"Boston Area","https://www.babson.edu","https://www.babson.edu/undergraduate/academics/concentrations/marketing/","https://www.babson.edu/student-life/","https://www.babson.edu/admission/undergraduate-school/"],
"Boston College":[42.3355,-71.1685,"Boston Area","https://www.bc.edu","https://www.bc.edu/bc-web/schools/carroll-school/academic-departments/marketing.html","https://www.bc.edu/bc-web/campus-life.html","https://www.bc.edu/bc-web/admission.html"],
"Vassar College":[41.686,-73.894,"NY/Upstate","https://www.vassar.edu","https://www.vassar.edu/sociology","https://www.vassar.edu/campuslife","https://www.vassar.edu/admissions"],
"Skidmore College":[43.098,-73.785,"NY/Upstate","https://www.skidmore.edu","https://www.skidmore.edu/sociology/","https://www.skidmore.edu/campuslife/","https://www.skidmore.edu/admissions/"],
"Ithaca College":[42.4228,-76.4948,"NY/Upstate","https://www.ithaca.edu","https://www.ithaca.edu/academics/school-business/marketing","https://www.ithaca.edu/life-at-ic","https://www.ithaca.edu/admission"],
"Hamilton College":[43.0506,-75.4066,"NY/Upstate","https://www.hamilton.edu","https://www.hamilton.edu/academics/departments/sociology","https://www.hamilton.edu/campuslife","https://www.hamilton.edu/admission"],
"Wheaton College (MA)":[41.9662,-71.1845,"MA/CT/Western NE","https://wheatoncollege.edu","https://wheatoncollege.edu/academics/programs/sociology/","https://wheatoncollege.edu/campus-life/","https://wheatoncollege.edu/admission/"],
"Wellesley College":[42.2936,-71.3067,"Boston Area","https://www.wellesley.edu","https://www.wellesley.edu/sociology","https://www.wellesley.edu/life-at-wellesley","https://www.wellesley.edu/admission"],
"Williams College":[42.7128,-73.203,"MA/CT/Western NE","https://www.williams.edu","https://anso.williams.edu/","https://www.williams.edu/student-life/","https://www.williams.edu/admission-aid/"],
"Amherst College":[42.3732,-72.5199,"MA/CT/Western NE","https://www.amherst.edu","https://www.amherst.edu/academiclife/departments/anthropology_sociology","https://www.amherst.edu/campuslife","https://www.amherst.edu/admission"],
"College of the Holy Cross":[42.2383,-71.8089,"MA/CT/Western NE","https://www.holycross.edu","https://www.holycross.edu/academics/program/sociology","https://www.holycross.edu/campus-life","https://www.holycross.edu/apply"],
"Trinity College (CT)":[41.7458,-72.6927,"MA/CT/Western NE","https://www.trincoll.edu","https://www.trincoll.edu/sociology/","https://www.trincoll.edu/studentlife/","https://www.trincoll.edu/admissions/"],
"Connecticut College":[41.3782,-72.1031,"MA/CT/Western NE","https://www.conncoll.edu","https://www.conncoll.edu/academics/majors-departments-programs/departments/sociology/","https://www.conncoll.edu/admission/faq/student-life/","https://www.conncoll.edu/admission/"]
};

// Marker cluster
var markers=L.markerClusterGroup();
for(var name in schools){
  var s=schools[name],lat=s[0],lon=s[1],region=s[2],site=s[3],program=s[4],student=s[5],admission=s[6];
  var html="<h4>"+name+"</h4><b>Region:</b> "+region+"<br><br>"+
           "<a href='"+site+"' target='_blank'>üåê Official Website</a><br>"+
           "<a href='"+program+"' target='_blank'>üìö Program Page</a><br>"+
           "<a href='"+student+"' target='_blank'>üéì Student Life</a><br>"+
           "<a href='"+admission+"' target='_blank'>üìù Admissions</a>";
  var marker=L.circleMarker([lat,lon],{radius:8,fillColor:regionColors[region],color:"#fff",weight:1,opacity:1,fillOpacity:0.9}).bindPopup(html);
  markers.addLayer(marker);
}
map.addLayer(markers);
map.fitBounds(markers.getBounds());
</script>
